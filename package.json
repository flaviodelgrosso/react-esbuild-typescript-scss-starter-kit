{
  "author": "Flavio Del Grosso",
  "description": "Starter kit to create a React library with ESBuild, StoryBook, TypeScript and Sass support.",
  "name": "react-lib-starter-kit",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "esbuild",
    "typescript",
    "starter-kit",
    "library",
    "sass",
    "storybook"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/flaviodelgrosso/react-esbuild-typescript-scss-starter-kit.git"
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "build-storybook": "build-storybook",
    "clean": "rm -rf node_modules yarn.lock dist",
    "lint": "eslint . --ext .ts,.js,.tsx",
    "prepare": "yarn build",
    "prettier": "prettier --check \"**/*{.js,.ts,.tsx}\"",
    "prettier:fix": "prettier --write \"**/*{.js,.ts,.tsx}\"",
    "storybook": "start-storybook -p 3000"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "@babel/core": "^7.17.9",
    "@babel/preset-react": "^7.16.7",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-interactions": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.4.22",
    "@storybook/testing-library": "^0.0.9",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "babel-loader": "^8.2.4",
    "css-loader": "5.2.6",
    "esbuild": "^0.14.48",
    "esbuild-sass-plugin": "^2.2.6",
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sass": "^1.50.0",
    "sass-loader": "10.1.1",
    "style-loader": "2.0.0",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
